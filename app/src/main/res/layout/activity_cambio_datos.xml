<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CambioDatos">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <RelativeLayout
                android:id="@+id/topBarra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/atras_btn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/redondo_back_light_10"
                    android:paddingStart="12sp"
                    android:paddingEnd="2dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="40dp"
                    android:src ="@drawable/atras_btn"/>
                <TextView
                    android:id="@+id/perfilTit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/perfilp"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="40dp"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/datosper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/datosPer"
                android:paddingStart="50dp"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/usuario"
                android:paddingStart="50dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/usuarioCambio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:text="Usuario"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                />



            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nombre"
                android:paddingStart="50dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/nombreCambio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:text="Nombre"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tel"
                android:paddingStart="50dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/telCambio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="phone"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"/>

            <Button
                android:id="@+id/guardar"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="16dp"
                android:onClick="onclick_reg"
                android:text="@string/guardar"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_marginTop="50dp"/>

            <TextView
                android:id="@+id/cambiarcontra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cambioContra"
                android:paddingStart="50dp"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/contraAnti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/contraAnti"
                android:inputType="textPassword"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/contranueva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="@string/contra"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                />
            <EditText
                android:id="@+id/contraNuevaRepe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="@string/repeContra"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                />
            <Button
                android:id="@+id/guardarContra"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="16dp"
                android:onClick="onclick_reg"
                android:text="@string/guardar"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>