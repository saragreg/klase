<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp">
        <TextView
            android:id="@+id/titdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/diaclase"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date" />
    </LinearLayout>
    <TextView
        android:id="@+id/opci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="@string/opcional"
        android:layout_gravity="left"
        android:layout_marginLeft="24dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp">
        <TextView
            android:id="@+id/tithora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/horaclase"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/editTextTime2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="time" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp">
        <TextView
            android:id="@+id/tipoclasetit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/tipoclase"
            android:layout_gravity="center"/>
        <RadioGroup
            android:id="@+id/continua_puntual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/continua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/continua"
                android:onClick="onRadioButtonKlase"/>

            <RadioButton
                android:id="@+id/puntual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/puntual"
                android:onClick="onRadioButtonKlase"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
