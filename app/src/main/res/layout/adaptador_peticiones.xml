<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffebb3"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

        <TextView
            android:id="@+id/intensivo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/ocasional"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/fechaHoraPet"
            app:layout_constraintTop_toBottomOf="@+id/fechaHoraPet" />

        <ImageView
            android:id="@+id/fotoPerfil"
            android:layout_width="62dp"
            android:layout_height="53dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="41dp"
            android:background="@drawable/redondo_back_light_10"
            app:layout_constraintEnd_toStartOf="@+id/username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icono_usuario" />


        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="User Name"
            android:textColor="#424242"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/fotoPerfil"
            app:layout_constraintStart_toEndOf="@+id/fotoPerfil"
            app:layout_constraintTop_toTopOf="@+id/fotoPerfil" />

        <TextView
            android:id="@+id/duracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/redondo_light_naranja"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="1h"
            android:textColor="#424242"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/username"
            app:layout_constraintStart_toEndOf="@+id/username"
            app:layout_constraintTop_toTopOf="@+id/username" />

            <ImageView
                android:id="@+id/aceptar_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="32dp"
                android:src="@drawable/baseline_check_circle_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/duracion"
                app:layout_constraintTop_toTopOf="@+id/duracion" />

        <ImageView
            android:id="@+id/rechazar_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:src="@drawable/baseline_cancel_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/aceptar_btn"
            app:layout_constraintTop_toBottomOf="@+id/aceptar_btn" />

        <ImageView
            android:id="@+id/info_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:src="@drawable/baseline_help_outline_24"
            app:layout_constraintEnd_toEndOf="@+id/rechazar_btn"
            app:layout_constraintStart_toStartOf="@+id/rechazar_btn"
            app:layout_constraintTop_toBottomOf="@+id/rechazar_btn" />

        <TextView
            android:id="@+id/fechaHoraPet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="14/05/2023 6pm"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@+id/fotoPerfil"
            app:layout_constraintTop_toBottomOf="@+id/fotoPerfil" />

        <TextView
            android:id="@+id/diasPet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/redondo_light_naranja"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text=""
            android:textSize="20sp"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/intensivo"
            app:layout_constraintTop_toBottomOf="@+id/fechaHoraPet" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@+id/info_btn"
                app:layout_constraintStart_toStartOf="@+id/flowlayout"
                app:layout_constraintTop_toTopOf="@+id/flowlayout">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/asig1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_asig_pulsada"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="mate"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/asig2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_asig_pulsada"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="mate"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/asig3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_asig_pulsada"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="mate"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/asig4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_asig_pulsada"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="mate"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/asig5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_asig_pulsada"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="mate"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/asig6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_asig_pulsada"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="mate"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/asig7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_asig_pulsada"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="mate"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/asig8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_asig_pulsada"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="mate"
                        android:visibility="gone" />

                </LinearLayout>
            </LinearLayout>

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flowlayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/info_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/intensivo">

        </androidx.constraintlayout.helper.widget.Flow>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

